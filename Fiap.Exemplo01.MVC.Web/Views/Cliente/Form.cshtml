@model Fiap.Exemplo01.MVC.Web.Models.Cliente
@{
    ViewBag.Title = "Form";
}

@if (TempData["success"] != null)
{
    @Helper.Message(Model.Nome);
}
<h2>Cadastrar</h2>

@using (Html.BeginForm("Form", "Cliente"))
{

    <div class="form-group">
        @Html.LabelFor(c => c.Nome)
        @Html.TextBoxFor(c => c.Nome, new { placeholder = "Digite seu nome", @class = "form-control", required = "" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Idade)
        @Html.TextBoxFor(c => c.Idade, new { placeholder = "Digite sua idade", @class = "form-control", required = ""
                , type = "number"})
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Credito)
        @Html.TextBoxFor(c => c.Credito, new { placeholder = "Digite sua idade", @class = "form-control", required = "",
                 type = "number", step = "any" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.DataNascimento)
        @Html.TextBoxFor(c => c.DataNascimento, new { required = "", type = "date", @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.NecessidadesEspeciais, new { required="" })
        @Html.CheckBoxFor(c => c.NecessidadesEspeciais)
    </div>



    <div class="form-group">
        @Html.LabelFor(c => c.EstadoCivil)
        @Html.TextBoxFor(c => c.EstadoCivil)       
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>







}

