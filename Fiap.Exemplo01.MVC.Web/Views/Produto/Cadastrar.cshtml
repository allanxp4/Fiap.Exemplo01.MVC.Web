
@{
    ViewBag.Title = "Cadastrar";
}


@if ((bool)TempData["success"])
{
    <br />
    <div class="alert alert-success">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @model Fiap.Exemplo01.MVC.Web.Models.Produto
        Produto @Model.Nome cadastrado com sucesso.
    </div>
}
<h2>Cadastrar</h2>

<form action="/Produto/Cadastrar" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" name="nome" id="produto.Nome" />
    </div>
    <div class="form-group">
        <label for="valor">Valor</label>
        <input type="number" step="any" class="form-control" name="valor" id="produto.Valor" />
    </div>
    <div class="form-group">
        <label for="quantidade">Quantidade</label>
        <input type="number" class="form-control" name="quantidade" id="produto.Quantidade" />
    </div>

     <button type="submit" class="btn btn-primary">Adicionar</button>      
    
</form>

